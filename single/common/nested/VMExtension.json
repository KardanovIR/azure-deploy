{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "authType": {
      "type": "string"
    },
    "adminUsername": {
      "type": "string"
    },
    "artifactsLocationUrl": {
      "type": "string"
    },
    "artifactsLocationUrlSasToken": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "dnsName": {
      "type": "string"
    },
    "fqdn": {
      "type": "string"
    },
    "wavesNetworkName": {
      "type": "string",
      "defaultValue": "MAINNET",
      "allowedValues": [
        "MAINNET",
        "TESTNET"
      ]
    },
    "wavesNodeName": {
      "type": "string",
      "defaultValue": null
    },
    "wavesWalletSeed": {
      "type": "string",
      "defaultValue": null
    },
    "wavesWalletPassword": {
      "type": "string",
      "defaultValue": null
    },
    "wavesLogLevel": {
      "type": "string",
      "defaultValue": "DEBUG",
      "allowedValues": [
        "OFF",
        "ERROR",
        "WARN",
        "INFO",
        "DEBUG",
        "TRACE"
      ]
    },
    "wavesRestApiEnabled": {
      "type": "string",
      "defaultValue": "NO",
      "allowedValues": [
        "YES",
        "NO"
      ]
    }
  },
  "variables": {
    "apiVersionVirtualMachinesExtensions": "2018-06-01",
    "dockerfile": "docker-compose.yml"
  },
  "resources": [
    {
      "apiVersion": "[variables('apiVersionVirtualMachinesExtensions')]",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('dnsName'), '/newuserscript')]",
      "location": "[parameters('location')]",
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": [
            "[uri(parameters('artifactsLocationUrl'), concat('configure.sh', parameters('artifactsLocationUrlSasToken')))]"
          ]
        },
        "protectedSettings": {
          "commandToExecute": "[concat('/bin/bash configure.sh \"', parameters('adminUsername'), '\" \"',parameters('artifactsLocationUrl'), '\" \"', parameters('fqdn'), '\" \"',parameters('wavesNetworkName'), '\" \"',parameters('wavesNodeName'), '\" \"',parameters('wavesWalletSeed'), '\" \"',parameters('wavesWalletPassword'), '\" \"',parameters('wavesLogLevel'), '\" \"',parameters('wavesRestApiEnabled'), '\"')]"
        }
      }
    }
  ]
}
