{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "authType": {
      "type": "string"
    },
    "adminUsername": {
      "type": "string"
    },
    "artifactsLocationUrl": {
      "type": "string"
    },
    "artifactsLocationUrlSasToken": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "dnsName": {
      "type": "string"
    },
    "fqdn": {
      "type": "string"
    },
    "dockerRepository": {
      "type": "string"
    },
    "dockerLogin": {
      "type": "string"
    },
    "dockerPassword": {
      "type": "string"
    },
    "dockerImage": {
      "type": "string"
    },
    "wavesNetworkName": {
      "type": "string",
      "defaultValue": "MAINNET",
      "allowedValues": [
        "MAINNET",
        "TESTNET"
      ]
    },
    "wavesNodeName": {
      "type": "string",
      "defaultValue": null
    },
    "wavesWalletSeed": {
      "type": "string",
      "defaultValue": null
    },
    "wavesWalletPassword": {
      "type": "string",
      "defaultValue": null
    },
    "wavesLogLevel": {
      "type": "string",
      "defaultValue": "DEBUG",
      "allowedValues": [
        "OFF",
        "ERROR",
        "WARN",
        "INFO",
        "DEBUG",
        "TRACE"
      ]
    },
    "wavesRestApiEnabled": {
      "type": "string",
      "defaultValue": "NO"
    }
  },
  "variables": {
    "apiVersionVirtualMachinesExtensions": "2018-06-01"
  },
  "resources": [
    {
      "apiVersion": "[variables('apiVersionVirtualMachinesExtensions')]",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('dnsName'), '/newuserscript')]",
      "location": "[parameters('location')]",
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": [
            "[uri(parameters('artifactsLocationUrl'), concat('scripts/config.sh', parameters('artifactsLocationUrlSasToken')))]",
            "[uri(parameters('artifactsLocationUrl'), concat('scripts/docker-compose.yml', parameters('artifactsLocationUrlSasToken')))]"
          ]
        },
        "protectedSettings": {
          "commandToExecute": "[concat('/bin/bash config.sh \"', parameters('adminUsername'), '\" \"', parameters('artifactsLocationUrl'), '\" \"', parameters('artifactsLocationUrlSasToken'), '\" \"', parameters('fqdn'), '\" \"', parameters('dockerRepository'), '\" \"', parameters('dockerLogin'), '\" \"', parameters('dockerPassword'), '\" \"', parameters('dockerImage'), '\" \"', parameters('wavesNetworkName'), '\" \"', parameters('wavesNodeName'), '\" \"', parameters('wavesWalletSeed'), '\" \"', parameters('wavesWalletPassword'), '\" \"', parameters('wavesLogLevel'), '\" \"',parameters('wavesRestApiEnabled'), '\"')]"
        }
      }
    }
  ]
}
